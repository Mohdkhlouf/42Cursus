#include <stdio.h>

int	ft_atoi(char *str)
{
	int	count;
	int	convert;

	count = 0;
	convert = 0;
	while ((*str <= 13 && *str >= 9) || *str == 32) //white spaces
		str++;
	while (*str == 43 || *str == 45) //+ and - signs
	{
		if (*str == 45)
			count++;
		str++;
	}	
	while (*str >= 48 && *str <= 57)
	{
		convert *= 10;
		convert += *str - '0';
		str++;
	}
	if (!(count % 2 == 0))
		return (-convert);
	return (convert);
}
